{
  "compilerOptions": {
    "target": "es2022",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext.asynciterable"
    ],
    "noImplicitAny": true,
    "importHelpers": true,
    "baseUrl": "src",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "*": ["node_modules/@types"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
