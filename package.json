{
  "name": "indexer",
  "version": "0.0.1",
  "scripts": {
    "clean:dist": "rimraf dist/*",
    "build:dev": "npm run clean:dist && tsc",
    "start": "npm run build:dev && concurrently \"tsc -w\" \"npm run watch\"",
    "watch": "sleep 3 && nodemon --watch dist dist/main.js",
    "test:unit": "alsatian src/**/*.spec.ts",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "test": "npm run lint && npm run test:unit",
    "check-coverage": "nyc npm run test"
  },
  "dependencies": {
    "axios": "^0.18.1",
    "inversify": "^5.0.1",
    "mongodb": "^3.3.2",
    "pg": "^7.7.1",
    "puppeteer": "^1.11.0",
    "reflect-metadata": "^0.1.12",
    "typescript": "^3.2.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/mongodb": "^3.3.6",
    "@types/node": "^10.12.12",
    "@types/pg": "^7.4.11",
    "@types/puppeteer": "^1.11.0",
    "alsatian": "^3.0.1",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.2",
    "tslib": "^1.9.3",
    "tslint": "^5.12.1"
  }
}
